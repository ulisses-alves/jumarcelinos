@import '../shared/style/colors.styl'

.container
    display flex
    height 100%

.title
    position absolute
    top 3rem
    left 3rem
    text-transform uppercase

.contact
    position absolute
    bottom 3rem
    left 3rem

.navigation
    position absolute
    top 3rem
    right 3rem

.social
    position absolute
    right 3rem
    bottom 2.5rem
    font-size 2rem
    
    > a
        margin-left 0.5rem

.left,
.right
    display flex
    align-items center
    justify-content center
    flex 1
    position relative

.left-title,
.right-title
    text-transform uppercase
    transform rotate(-90deg)
    text-align center
    position absolute
    width 100vh

.left-title
    font-size 6vh
    transform-origin bottom left
    right -100vh
    bottom 0

.right-title
    font-size 4vh
    transform-origin top left
    top 100vh
    left 0

.theme1
    .left
        background-color color-1
        color color-1-accent

    .right
        color color-1
    
    .navigation
        color color-text-light

.theme2
    .left
        color color-2
    
    .right
        background-color color-2
        color color-2-accent

.theme3
    .left
        background-color color-3
        color color-3-accent
    
    .right
        color color-3
    
    .navigation
        color color-text-light

.theme4
    .left
        background-color color-4
        color color-4-accent
    
    .right
        color color-4
    
    .navigation
        color color-text-light

.theme5
    .left
        color color-5
    
    .right
        background-color color-5
        color color-5-accent

    .navigation
        color color-5-accent